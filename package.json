{
	"name": "tts",
	"module": "index.ts",
	"type": "module",
	"scripts": {
		"dev": "bun run index.ts",
		"build:windows-modern": "bun build --compile --target=bun-windows-x64-modern ./index.ts ./src/workers/tts.worker.ts --outfile AudioGenerator",
		"build": "bun build --compile ./index.ts ./src/workers/tts.worker.ts --outfile AudioGenerator",
		"build:all": "bun run build && bun run build:windows-modern",
		"lint": "bunx @biomejs/biome check .",
		"lint:fix": "bunx @biomejs/biome check --apply .",
		"type-check": "bunx tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "latest",
		"@types/clear": "^0.1.4",
		"@types/cli-progress": "^3.11.5",
		"@types/figlet": "^1.5.8",
		"@types/gradient-string": "^1.1.6",
		"@types/inquirer": "^9.0.7",
		"@types/node": "^22.9.0"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"clear": "^0.1.0",
		"inquirer": "^9.2.12",
		"cli-progress": "^3.12.0",
		"boxen": "^7.1.1",
		"figlet": "^1.7.0",
		"ora": "^8.0.1",
		"gradient-string": "^2.0.2",
		"puppeteer": "^21.6.1"
	}
}
